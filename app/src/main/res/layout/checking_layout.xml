<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkingNameLayout"
        />
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/checkingNameLayout"
        app:layout_constraintBottom_toBottomOf="@id/checkingNameLayout"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/checkingNameTV"
        app:layout_constraintLeft_toRightOf="@id/checkingNameLayout"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/checkingNameTV"/>

</androidx.constraintlayout.widget.ConstraintLayout>