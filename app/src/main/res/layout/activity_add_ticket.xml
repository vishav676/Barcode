<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTicket">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/heading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24sp"
        android:textColor="#000"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:text="Add New Ticket"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@id/heading"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:hint="Ticket"
        android:inputType="text"
        android:id="@+id/tvTicketNumber"
        android:layout_height="wrap_content"
        tools:ignore="TextFields" />
    <EditText
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTicketNumber"
        android:layout_width="match_parent"
        android:hint="Customer Name"
        android:layout_margin="8dp"
        android:inputType="text"
        android:id="@+id/tvCustomerName"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tvCustomerName"
        android:hint="Ticket Info"
        android:inputType="text"
        android:layout_margin="8dp"

        android:id="@+id/tvInfo"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="Ticket Warning Note"
        app:layout_constraintTop_toBottomOf="@id/tvInfo"
        android:id="@+id/tvWarningNote"
        android:inputType="text"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:hint="Useable"
        android:inputType="number"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvWarningNote"
        android:id="@+id/tvUseable"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:hint="Event Id"
        android:inputType="number"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvUseable"
        android:id="@+id/tvEvent"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:hint="Warning"
        android:inputType="text"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEvent"
        android:id="@+id/tvWarning"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_box"
        android:text="Add"
        android:id="@+id/saveTicket"
        android:layout_margin="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>